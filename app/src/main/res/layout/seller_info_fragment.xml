<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sellerInformationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Information"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sellerBulletList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Bullet List"
        android:layout_marginTop="32dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/selectedGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellerBulletList" />

    <TextView
        android:id="@+id/returnPoliciesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Policies"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/returnPoliciesBulletList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Policies Bullet List"
        android:layout_marginTop="254dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>