<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/catalogCardImage"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ebay_default"/>

        <TextView
            android:id="@+id/catalogCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catalogCardImage"
            android:text="Catalog Card Title"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="5dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/catalogCardShipping"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@id/catalogCardTitle"
            android:text="Catalog Card Shipping"
            android:textSize="12dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/catalogCardTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catalogCardShipping"
            android:text="Top Rated Listing"
            android:textSize="10dp"
            android:padding="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/catalogCardCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catalog Card Shipping"
            android:textSize="11dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"/>

<!--        <TextView-->
<!--            android:id="@+id/catalogCardPrice"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Catalog Card Shipping" />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>